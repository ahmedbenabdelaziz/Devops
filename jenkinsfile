pipeline {
    agent any

    stages {
        // Étape 1: Récupération du code
        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/ahmedbenabdelaziz/Devops.git']]
                ])
            }
        }

        // Étape 2: Build Backend Node.js
        stage('Build Backend') {
            steps {
                bat '''
                    cd backend
                    npm install
                    npm run build
                '''
            }
        }

        // Étape 3: Build Frontend Flutter
        stage('Build Frontend') {
            steps {
                bat '''
                    cd frontend
                    flutter pub get
                    flutter build web
                '''
            }
        }
    }

    post {
        always {
            bat 'echo Pipeline terminé avec statut : %BUILD_STATUS%'
        }
    }
}
