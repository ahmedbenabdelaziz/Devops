pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/ahmedbenabdelaziz/Devops.git']]
                    ])
                }
            }
        }

        stage('Verify Files') {
            steps {
                script {
                    // Afficher les fichiers dans le répertoire pour vérifier si le projet est bien cloné
                    bat 'dir'
                }
            }
        }

        stage('Build Backend') {
            steps {
                script {
                    // Naviguer vers le dossier du projet Node.js
                    bat '''
                    cd mon-projet-node
                    echo "Vérification du dossier actuel: %cd%"
                    if exist package.json (
                        echo "package.json trouvé, lancement de npm install"
                        npm install
                        npm run build
                    ) else (
                        echo "ERREUR: package.json introuvable!"
                        exit /b 1
                    )
                    '''
                }
            }
        }
    }
}
